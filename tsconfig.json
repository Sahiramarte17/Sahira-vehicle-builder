{
  "compilerOptions": {
    "moduleResolution": "nodenext",
    "target": "ESNext",
    "module": "NodeNext",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "declaration": true,
    "allowImportingTsExtensions": true,
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}